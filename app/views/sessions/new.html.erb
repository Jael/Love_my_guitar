<%= form_tag sessions_path, class: "form-horizontal" do %>
    <div class="control-group">
      <%= label_tag :email, "email", class: "control-label" %>
      <div class="controls">
        <div class="input-prepend">
          <span class="add-on"><i class="icon-envelope"></i></span>
          <%= email_field_tag :email, params[:email], class: "span2" %>
        </div>
      </div>
    </div>
  <div class="control-group">
    <%= label_tag :password, "password", class: "control-label" %>
    <div class="controls">
      <div class="input-prepend">
      <span class="add-on"><i class="icon-lock"></i></span>
      <%= password_field_tag :password, class: "span2" %>
      </div>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= submit_tag "Log in", class: "btn" %>
    </div>
  </div>
<% end %>
