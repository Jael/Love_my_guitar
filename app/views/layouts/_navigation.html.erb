<%= link_to "Love my Guitar", root_path, class: "brand" %>

<ul class="nav">
  <li class="active"><%= link_to "Post", posts_path %></li>
  <li><%= link_to "New Post", new_post_path %></li>
</ul>

<% if current_user.nil? %>
<ul class="nav pull-right">
  <li class="divider-vertical"><%= link_to "log in", log_in_path %></li>
  <li class="divider-vertical"><%= link_to "sign up", sign_up_path %></li>
</ul>
<% else %>
<ul>
  <div class="btn-group pull-right">
  <a class="btn dropdown-@usertoggle" data-toggle="dropdown" href="#">
    <%= gravatar_image_tag current_user.email, gravatar: {size:20} %>
    <%= current_user.name %>
    <span class="caret"></span>
  </a>
  <ul class="dropdown-menu">
    <li><%= link_to "My post", user_post_posts_path(user_id: current_user) %></li>
    <li><%= link_to 'profile', "#" %></li>
    <li class="divider"></li>
    <li><%= link_to 'logout', log_out_path, method: :delete, confirm: "Are you sure" %></li>
  </ul>
  </div>
</ul>
<% end %>
