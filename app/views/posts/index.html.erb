<h1>Post index</h1>
<div>
  <% @posts.each do |post| %>
    <h3>
    <%= link_to post.title, post %>
  </h3>
  <% if post.type %>
    <span class="label"><%= post.type.name %></span>
<% end %>
  <% if !current_user.voted_for?(post)  %>
    <a href=<%= vote_post_path(post, type: "up")%> > <i class="icon-arrow-up"></i></a>
    <%= post.reputation_for(:votes).to_i %>
    <a href=<%= vote_post_path(post, type: "down")%>><i class="icon-arrow-down"></i></a>
  <% else %>
    <span class="badge">
    <a  rel="tooltip" title="voted"><%= post.reputation_for(:votes).to_i %></a>
    </span>
  <% end %>
  <p>
  <span class="muted"> submited <%= time_ago_in_words post.created_at %> ago </span>| 
  <%= link_to pluralize(post.comments.count, "comment"), post%> |
  <span data-toggle="collapse" data-target="#demo<%= post.id %>"><%= link_to "share", "#" %></span>
  <div id="demo<%= post.id %>" class="collapse">  
    <%= form_tag shares_path(post_id: post) do %>
      <div>
      <%= label_tag :email, "send this link to" %>
      <%= email_field_tag :email %>
    </div>
    <div>
      <%= label_tag :name, "Your name" %>
      <%= text_field_tag :name %>
    </div>
    <div>
      <%= label_tag :message %>
      <%= text_area_tag :message %>
    </div>
    <div>
      <%= submit_tag "Share" %>
    </div>
  <% end %>
  </div>
  </p>
  <hr />
<% end %>
</div>
<%= link_to "New post", new_post_path %>
